@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "AppointMe";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - AppointMe</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            min-height: 100vh;
        }

        .auth-bg {
            min-height: 100vh;
            display: grid;
            place-items: center;
            padding: 24px;
            background: radial-gradient(1200px 600px at 10% 10%, rgba(13,110,253,.15), transparent 60%), radial-gradient(1000px 500px at 90% 20%, rgba(32,201,151,.12), transparent 55%), radial-gradient(900px 500px at 50% 95%, rgba(255,193,7,.10), transparent 55%), #f8f9fa;
        }

        .auth-card {
            width: 100%;
            max-width: 980px;
            border: 0;
            border-radius: 18px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,.10);
        }

        .auth-left {
            padding: 36px;
            color: #fff;
            background: linear-gradient(135deg, #0d6efd 0%, #20c997 100%);
        }

        .brand-pill {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 8px 14px;
            border-radius: 999px;
            background: rgba(255,255,255,.14);
            border: 1px solid rgba(255,255,255,.22);
            font-weight: 600;
            margin-bottom: 20px;
        }

        .brand-logo {
            display: block;
            margin: 12px auto 28px;
            max-width: 160px;
            filter: drop-shadow(0 8px 18px rgba(0,0,0,.25));
        }

        .auth-right {
            padding: 36px;
            background: #fff;
        }

        .form-control, .form-check-input, .btn {
            border-radius: 12px;
        }

        .btn-primary {
            padding: 12px 14px;
            font-weight: 600;
        }

        .small-link a {
            text-decoration: none;
        }

            .small-link a:hover {
                text-decoration: underline;
            }

        @@media (max-width: 992px) {
            .auth-left {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="auth-bg">
        <div class="card auth-card">
            <div class="row g-0">

                <!-- LEFT BRAND PANEL -->
                <div class="col-lg-5 auth-left d-flex flex-column justify-content-between">

                    <div>
                        <!--  <div class="brand-pill">
                             <i class="bi bi-calendar2-check"></i>
                             <span>AppointMe</span>
                          </div> -->
                          <br />
                        <!-- LOGO -->
                        <img src="/images/logo.png"
                             alt="AppointMe Logo"
                             class="brand-logo" />

                             
                             <hr />
                        <h2 class=" mb-2">Welcome back!</h2>
                        <p class="mb-0 opacity-75">
                            Manage customers, appointments, and your business settings in one place.
                        </p>
                    </div>

                    <div class="opacity-75 small">
                        © @DateTime.UtcNow.Year AppointMe
                    </div>
                </div>

                <!-- RIGHT FORM PANEL -->
                <div class="col-lg-7 auth-right">
                    @RenderBody()
                </div>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


