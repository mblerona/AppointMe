@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "../_AuthLayout.cshtml";
}

<div class="d-flex align-items-start justify-content-between mb-4">
    <div>
        <h1 class="fw-bold mb-1">Create account</h1>
        <div class="text-muted">Set up your user profile to start using AppointMe.</div>
    </div>
</div>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="row g-3">
        <div class="col-12 col-md-6">
            <label asp-for="Input.FirstName" class="form-label fw-semibold">First name</label>
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-person"></i></span>
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="John" />
            </div>
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.LastName" class="form-label fw-semibold">Last name</label>
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-person"></i></span>
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Doe" />
            </div>
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Input.ConfirmPassword" class="form-label fw-semibold">Confirm password</label>
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-shield-lock"></i></span>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <button id="registerSubmit" type="submit" class="w-100 btn btn-primary mt-4">
        <i class="bi bi-person-plus me-1"></i> Register
    </button>

    <div class="text-center mt-3 small-link">
        <span class="text-muted">Already have an account?</span>
        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold">Log in</a>
    </div>
</form>

@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <hr class="my-4" />
    <div class="text-muted fw-semibold mb-2">Or register with</div>

    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="d-flex flex-wrap gap-2">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name"
                        title="Register using your @provider.DisplayName account">
                    @provider.DisplayName
                </button>
            }
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



