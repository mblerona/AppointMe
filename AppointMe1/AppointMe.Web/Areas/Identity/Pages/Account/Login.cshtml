@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "../_AuthLayout.cshtml";
}

<div class="d-flex align-items-start justify-content-between mb-4">
    <div>
        <h1 class="fw-bold mb-1">Log in</h1>
        <div class="text-muted"></div>
    </div>
</div>

<form id="account" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label fw-semibold">Email</label>
        <div class="input-group">
            <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
        </div>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label fw-semibold">Password</label>
        <div class="input-group">
            <span class="input-group-text bg-white"><i class="bi bi-lock"></i></span>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
        </div>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="d-flex align-items-center justify-content-between mb-3 ">
        <div class="form-check">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            <label class="form-check-label" asp-for="Input.RememberMe">
                Remember me
            </label>
        </div>

        <div class="small-link small">
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
        </div>
    </div>

    <button id="login-submit" type="submit" class="w-25 btn btn-primary text-center justify-content-center align-items-center">
        <i class="bi bi-box-arrow-in-right me-1"></i> Log in
    </button>

    <div class="text-center mt-3 small-link">
        <span class="text-muted">No account?</span>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-semibold">Create one</a>
    </div>


</form>

@if ((Model.ExternalLogins?.Count ?? 0) > 0)
{
    <hr class="my-4" />
    <div class="text-muted fw-semibold mb-2">Or continue with</div>

    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="d-flex flex-wrap gap-2">
            @foreach (var provider in Model.ExternalLogins!)
            {
                <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name"
                        title="Log in using your @provider.DisplayName account">
                    @provider.DisplayName
                </button>
            }
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}











