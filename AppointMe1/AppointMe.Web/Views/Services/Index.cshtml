@model IEnumerable<AppointMe.Domain.DomainModels.ServiceOffering>

@{
    ViewData["Title"] = "Services";

    string BadgeClass(bool isActive) => isActive ? "badge rounded-pill text-bg-success" : "badge rounded-pill text-bg-secondary";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .page-wrap {
        max-width: 980px;
        margin: 0 auto;
    }

    .card-soft {
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        background: #fff;
    }

    .section-title {
        font-size: .95rem;
        letter-spacing: .02em;
        text-transform: uppercase;
        color: #6c757d;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-xxs {
        padding: 4px 8px;
        font-size: .75rem;
        line-height: 1;
        border-radius: 10px;
    }

    .price {
        font-variant-numeric: tabular-nums;
    }
</style>

<div class="page-wrap py-4">

    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
           
            <h2 class="fw-bold mb-0">
                Your Business Services
            </h2>
            <div class="text-muted small mt-1">
                Add the services here, you must also include their prices.
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle me-1"></i> Add Service
            </a>
        </div>
    </div>

    <div class="card card-soft">
        <div class="card-body p-3 p-md-4">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle me-1"></i>@TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mb-3">
                    <i class="bi bi-exclamation-triangle me-1"></i>@TempData["ErrorMessage"]
                </div>
            }

            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width:40%;">Name</th>
                                <th style="width:20%;">Price</th>
                                <th style="width:20%;">Status</th>
                                <th class="text-end" style="width:20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@s.Name</div>
                                      @*   <div class="text-muted small">ID: @s.Id</div> *@
                                    </td>

                                    <td class="price fw-semibold">
                                        @s.Price.ToString("0.00") ден
                                    </td>

                                    <td>
                                        <span class="@BadgeClass(s.IsActive)">
                                            @(s.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>

                                    <td class="text-end">
                                        <div class="d-inline-flex gap-1">
                                            <a class="btn btn-xxs btn-outline-warning"
                                               asp-action="Edit"
                                               asp-route-id="@s.Id"
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <a class="btn btn-xxs btn-outline-danger"
                                               asp-action="Delete"
                                               asp-route-id="@s.Id"
                                               title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="bi bi-info-circle me-1"></i>No services found. Click <b>Add Service</b> to create your first one.
                </div>
            }
        </div>
    </div>

</div>
