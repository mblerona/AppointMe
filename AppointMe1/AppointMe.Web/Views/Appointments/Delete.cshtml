@model AppointMe.Domain.DTO.AppointmentDTO
@{
    ViewData["Title"] = "Delete Appointment";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .edit-wrap {
        max-width: 820px;
        margin: 0 auto;
    }

    .card-soft {
        border: 1px solid rgba(0,0,0,.06);
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,.06);
        background: #fff;
    }

    .section-title {
        font-size: .95rem;
        letter-spacing: .02em;
        text-transform: uppercase;
        color: #6c757d;
    }

    .btn {
        border-radius: 12px;
    }
</style>

<div class="edit-wrap py-4">

    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <div class="section-title mb-1">Appointments</div>
            <h2 class="fw-bold mb-0">
                <i class="bi bi-trash3 me-2"></i>Delete Appointment
            </h2>
        </div>

        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <div class="card card-soft">
        <div class="card-body p-4">

            <div class="alert alert-warning d-flex gap-2">
                <i class="bi bi-exclamation-triangle-fill mt-1"></i>
                <div>
                    <div class="fw-bold">Confirm deletion</div>
                    <div class="small mb-0">This action cannot be undone.</div>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="text-muted small">Customer</div>
                    <div class="fw-semibold">@(!string.IsNullOrWhiteSpace(Model.CustomerName) ? Model.CustomerName : "—")</div>
                </div>
                <div class="col-md-6">
                    <div class="text-muted small">Order #</div>
                    <div class="fw-semibold">@Model.OrderNumber</div>
                </div>
                <div class="col-md-6">
                    <div class="text-muted small">Date</div>
                    <div class="fw-semibold">@Model.AppointmentDate.ToString("dd MMM yyyy, HH:mm")</div>
                </div>
                <div class="col-md-6">
                    <div class="text-muted small">Status</div>
                    <div class="fw-semibold">@Model.Status</div>
                </div>
            </div>

            <hr class="my-4" />

            <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@Model.Id">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>

                <button class="btn btn-danger" type="submit">
                    <i class="bi bi-trash3"></i> Delete
                </button>
            </form>

        </div>
    </div>
</div>
